{
  "name": "comprehensive-solidity-learning",
  "version": "1.0.0",
  "description": "Comprehensive Solidity learning contract with all concepts",
  "main": "index.js",
  "scripts": {
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "test:verbose": "npx hardhat test --verbose",
    "test:gas": "REPORT_GAS=true npx hardhat test",
    "deploy": "npx hardhat run scripts/deploy.js",
    "deploy:localhost": "npx hardhat run scripts/deploy.js --network localhost",
    "interact": "npx hardhat run scripts/interact.js",
    "interact:localhost": "npx hardhat run scripts/interact.js --network localhost",
    "node": "npx hardhat node",
    "clean": "npx hardhat clean",
    "verify": "npx hardhat verify",
    "workflow": "chmod +x scripts/test-workflow.sh && ./scripts/test-workflow.sh",
    "coverage": "npx hardhat coverage"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "hardhat": "^2.19.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.9.6"
  },
  "keywords": [
    "solidity",
    "smart-contracts",
    "blockchain",
    "ethereum",
    "learning",
    "web3",
    "hardhat",
    "testing"
  ],
  "author": "Ardit - Learning Web3",
  "license": "MIT"
}
